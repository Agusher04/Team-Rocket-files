<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="COMPUERTAS LÃ“GICAS"
        android:textSize="30sp" />
    <CheckBox
        android:id="@+id/cBoxGateA_in1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gateA in 1 "
        android:checked="false"/>
    <CheckBox
        android:id="@+id/cBoxGateA_in2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gateA in 2 "
        android:checked="false"/>
    <CheckBox
        android:id="@+id/cBoxGateB_in1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gateB in 1 "
        android:checked="false"/>
    <CheckBox
        android:id="@+id/cBoxGateB_in2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gateB in 2 "
        android:checked="false"/>
    <CheckBox
        android:id="@+id/cbOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="output"
        android:checked="false"
        android:enabled="false"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right">
        <Spinner
            android:id="@+id/spinnerG1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:popupBackground="@android:color/white"
            android:scrollbars="none"
            android:spinnerMode="dropdown" />
        <Spinner
            android:id="@+id/spinnerG2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:popupBackground="@android:color/white"
            android:scrollbars="none"
            android:spinnerMode="dropdown"/>
        <Spinner
            android:id="@+id/spinnerG3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:popupBackground="@android:color/white"
            android:scrollbars="none"
            android:spinnerMode="dropdown" />

    </LinearLayout>
</LinearLayout>