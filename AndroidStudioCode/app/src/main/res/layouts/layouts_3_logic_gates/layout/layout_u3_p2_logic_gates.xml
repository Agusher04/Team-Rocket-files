<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="COMPUERTAS LÃ“GICAS"
        android:textSize="30sp" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:rowCount="3"
        android:columnCount="3"
        >
        <ImageView
            android:id="@+id/imgGateA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/and"

            />
        <ImageView
            android:id="@+id/imgGateB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/and"

            />
        <ImageView
            android:id="@+id/imgGateC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/and"
            />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/wire01"
            />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/wire11"
            />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/wire21"
            />
    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">
            <CheckBox
                android:id="@+id/cBoxGateA_in1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gateA in 1 "
                android:checked="false"/>
            <CheckBox
                android:id="@+id/cBoxGateA_in2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gateA in 2 "
                android:checked="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">
            <CheckBox
                android:id="@+id/cBoxGateB_in1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gateB in 1 "
                android:checked="false"/>
            <CheckBox
                android:id="@+id/cBoxGateB_in2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gateB in 2 "
                android:checked="false"/>
        </LinearLayout>
    </LinearLayout>
    <CheckBox
        android:id="@+id/cbOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="output"
        android:checked="false"
        android:enabled="false"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right">
        <Spinner
            android:id="@+id/spinnerG1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:popupBackground="@android:color/white"
            android:scrollbars="none"
            android:spinnerMode="dropdown" />
        <Spinner
            android:id="@+id/spinnerG2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:popupBackground="@android:color/white"
            android:scrollbars="none"
            android:spinnerMode="dropdown"/>
        <Spinner
            android:id="@+id/spinnerG3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:popupBackground="@android:color/white"
            android:scrollbars="none"
            android:spinnerMode="dropdown" />

    </LinearLayout>
</LinearLayout>